{{#if product}}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-2 text center">
            <div class="card-header">
            <h1>Editar producto para :{{restaurant}}</h1>
            </div>
            <div class="card-body">
                <form action="/product/editPro/{{product._id}}?_method=PUT" method="POST">
                <input type="hidden"  name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" autofocus value="{{product.name}}">
                        
                    </div>
                    <div class="form-group">
                        <input type="number" name="price" placeholder="precio" class="form-control" value="{{product.price}}">>
                    </div>
                    <div class="form-group">
                        <input type="text" name="category" placeholder="categoria" class="form-control" value="{{product.category}}">>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block" >Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}