{{#each restaurant}}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-2 text center">
            <div class="card-header">
            <h1>Crear producto para :{{name}}</h1>
            </div>
            <div class="card-body">
                <form action="/products/create" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" autofocus>
                        
                    </div>
                    <div class="form-group">
                        <input type="number" name="price" placeholder="precio" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="category" placeholder="categoria" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block" >Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}